---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Logo from "@/components/ui/Logo.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Our Dogs",
    path: "#",
    children: [
      { title: "Available Studs", path: "/studs" },
      { title: "Available Puppies", path: "/puppies" },
    ],
  },
  {
    title: "Breeding Program",
    path: "/breeding-program",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center gap-3 lg:gap-4 justify-center lg:justify-start flex-1 lg:flex-none">
          <!-- Enhanced Brand with Dynamic Logo - Mobile Optimized -->
          <div class="flex flex-col items-center text-center">
            <div class="mb-1">
              <Logo size="md" animated={true} priority={true} />
            </div>
            <div class="font-heading font-bold text-lg text-brand-navy leading-tight">Max Line HorrorBullz</div>
          </div>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-primary" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-6">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-primary hover:text-brand-orange font-medium transition-colors">
                      <span> {item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="/contact" style="outline" block size="md">Get Info</Link>
          <Link href="/puppies" size="md" block>View Puppies</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="/contact" style="outline" size="md">Get Info</Link>
        <Link href="/puppies" size="md">View Puppies</Link>
      </div>
    </div>
  </header>
</Container>

<style>
  /* Mobile-specific centering improvements */
  @media (max-width: 1024px) {
    .brand-container {
      justify-content: center;
      width: 100%;
    }
  }
</style>
