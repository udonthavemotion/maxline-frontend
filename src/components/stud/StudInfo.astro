---
import { Icon } from "astro-icon/components";
import { type Stud } from "@/lib/strapi";

interface Props {
  stud: Stud;
}

const { stud } = Astro.props;

// Function to render rich text blocks
function renderRichText(content: any) {
  if (typeof content === 'string') {
    return content;
  }
  
  if (Array.isArray(content)) {
    return content.map((block, index) => {
      if (block.type === 'paragraph') {
        return block.children.map((child, childIndex) => child.text).join('');
      }
      return '';
    }).join(' ');
  }
  
  return '';
}
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-heading font-bold text-brand-navy mb-4">
        About {stud.name}
      </h2>
      <p class="text-lg text-secondary">
        Detailed information about our champion stud
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Basic Information -->
      <div class="space-y-6">
        <!-- Description -->
        {stud.description && (
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
              <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-info-circle" />
              Description
            </h3>
            <div class="prose max-w-none text-gray-700">
              <p class="leading-relaxed">
                {renderRichText(stud.description)}
              </p>
            </div>
          </div>
        )}
        
        <!-- Bloodlines -->
        {stud.bloodlines && (
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
              <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-crown" />
              Bloodlines
            </h3>
            <div class="flex flex-wrap gap-2">
              {stud.bloodlines.split(',').map((bloodline) => (
                <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                  {bloodline.trim()}
                </span>
              ))}
            </div>
          </div>
        )}
        
        <!-- Basic Stats -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-bar-chart" />
            Quick Stats
          </h3>
          <div class="grid grid-cols-2 gap-4">
            {stud.age && (
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-brand-navy">{stud.age}</div>
                <div class="text-sm text-gray-600">Age</div>
              </div>
            )}
            
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-brand-navy capitalize">{stud.availability}</div>
              <div class="text-sm text-gray-600">Status</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Specialties and Additional Info -->
      <div class="space-y-6">
        <!-- Specialties -->
        {stud.specialties && (
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
              <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-star" />
              Specialties
            </h3>
            <div class="flex flex-wrap gap-2">
              {stud.specialties.split(',').map((specialty) => (
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                  {specialty.trim()}
                </span>
              ))}
            </div>
          </div>
        )}
        
        <!-- Breeding Information -->
        <div class="bg-gradient-to-br from-brand-navy to-brand-blue text-white rounded-xl p-6 shadow-lg">
          <h3 class="text-2xl font-heading font-bold mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-orange" name="bx:bxs-heart" />
            Breeding Information
          </h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-neutral-200">Stud Fee:</span>
              <span class="text-xl font-bold text-brand-orange">${stud.fee.toLocaleString()}</span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-neutral-200">Availability:</span>
              <span class="font-medium capitalize">{stud.availability}</span>
            </div>
            
            <div class="pt-3 border-t border-white/20">
              <p class="text-sm text-neutral-300">
                Contact us to discuss breeding arrangements and availability.
              </p>
            </div>
          </div>
        </div>
        
        <!-- Placeholder for Future Content -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-shield" />
            Health & Certifications
          </h3>
          <p class="text-gray-600 italic">
            Health testing and certification information will be available here once configured in the admin panel.
          </p>
        </div>
      </div>
    </div>
    
    <!-- Call to Action -->
    <div class="text-center mt-12">
      <div class="bg-secondary rounded-2xl p-8">
        <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4">
          Ready to Breed with {stud.name}?
        </h3>
        <p class="text-lg text-gray-600 mb-6">
          Contact us today to discuss breeding arrangements and availability.
        </p>
        <a 
          href="#contact" 
          class="bg-brand-orange hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-medium transition-colors inline-flex items-center gap-2"
        >
          <Icon class="w-5 h-5" name="bx:bxs-phone" />
          Get in Touch
        </a>
      </div>
    </div>
  </div>
</section> 