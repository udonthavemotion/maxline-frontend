---
import { Icon } from "astro-icon/components";
import { getGalleryItems, getImageUrl, type GalleryItem } from "../lib/strapi";
import type { Homepage } from "@/lib/strapi";

interface Props {
  homepageContent?: Homepage | null;
}

const { homepageContent } = Astro.props;

let galleryItems: GalleryItem[] = [];
let error: string | null = null;

// Fallback data in case API fails
const fallbackImages = [
  {
    src: "https://placehold.co/400x300?text=Champion+Stud+1",
    alt: "Champion English Bulldog Stud 1",
    title: "Champion Bloodlines",
    description: "Our carefully selected champion studs represent the finest English Bulldog genetics."
  },
  {
    src: "https://placehold.co/400x300?text=Happy+Puppy+1",
    alt: "Happy English Bulldog Puppy 1",
    title: "Healthy Puppies",
    description: "Each puppy is raised with love and receives comprehensive health care from birth."
  },
  {
    src: "https://placehold.co/400x300?text=Breeding+Pair",
    alt: "English Bulldog Breeding Pair",
    title: "Expert Breeding",
    description: "Strategic pairings ensure optimal health, temperament, and conformation in every litter."
  },
  {
    src: "https://placehold.co/400x300?text=Family+Photo",
    alt: "English Bulldog Family Photo",
    title: "Family Raised",
    description: "Our bulldogs are part of our family, ensuring excellent socialization and temperament."
  },
  {
    src: "https://placehold.co/400x300?text=Show+Winner",
    alt: "English Bulldog Show Winner",
    title: "Show Quality",
    description: "Many of our bulldogs have achieved championship status in prestigious dog shows."
  },
  {
    src: "https://placehold.co/400x300?text=Puppy+Playdate",
    alt: "English Bulldog Puppy Playdate",
    title: "Socialization",
    description: "Early socialization ensures our puppies grow into well-adjusted family companions."
  }
];

try {
  const response = await getGalleryItems({
    populate: 'image',
    sort: 'order:asc',
    pageSize: 6
  });
  galleryItems = response.data;
} catch (err) {
  console.error('Error fetching gallery items:', err);
  error = 'Failed to load gallery items';
}

// Use fallback if no items loaded from API
const imagesToDisplay = galleryItems.length > 0 ? galleryItems : fallbackImages;
---

<!-- Revamped MAXLINE HORRORBULLZ GALLERY Section -->
<section class="relative z-10 w-full px-6 py-16 bg-gradient-to-br from-[#fffaf5] to-[#f9f9f9] text-center overflow-hidden">
  <div class="max-w-5xl mx-auto space-y-10">
    <!-- Header -->
    <div class="relative">
      <h2 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-orange-600 flex items-center justify-center gap-3">
        <span class="text-5xl">üèÜ</span>
        MAXLINE HORRORBULLZ GALLERY
        <span class="text-5xl">üèÜ</span>
      </h2>
      <p class="mt-2 text-sm uppercase tracking-widest text-gray-500 font-medium">Where Florida grit meets UK blood.</p>
    </div>

    <!-- Subtext Block -->
    <div class="bg-white/70 backdrop-blur-md border border-orange-100 rounded-xl p-6 sm:p-8 shadow-xl space-y-6">
      <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
        We came together with one goal in mind ‚Äî to build something different.
        <span class="font-semibold text-gray-900">MaxLine Bulldogs</span> brings the hands-on Florida pressure ‚Äî the heat, the hustle, and the day-to-day work it takes to shape real bulldogs.
        <span class="font-semibold text-gray-900">HORRORBULLZ</span> carries the heavy UK blood that brings bone, mass, and that unmistakable look you can't fake.
      </p>
      <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
        We're not chasing hype. We're building <span class="font-bold text-orange-600">real dogs</span> ‚Äî with intention, structure, and presence. Every pairing is a move forward. Every pup is a piece of the vision.
        <br/>
        <span class="italic text-gray-500">This is more than a collab ‚Äî it's the start of something serious.</span>
      </p>
    </div>

    <!-- Divider -->
    <div class="flex justify-center">
      <div class="h-1 w-20 bg-orange-500 rounded-full"></div>
    </div>

    <!-- Call to Action -->
    <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4">
      <a href="/breeding-program" class="bg-orange-600 hover:bg-orange-700 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition duration-200 inline-flex items-center gap-2">
        üêæ View Gallery
      </a>
      <a href="/studs" class="border border-orange-500 text-orange-600 hover:bg-orange-100 font-semibold px-6 py-3 rounded-xl shadow-md transition duration-200 inline-flex items-center gap-2">
        üß¨ Meet Our Studs
      </a>
    </div>
  </div>

  <!-- Gallery Grid -->
  <div class="max-w-7xl mx-auto px-4 mt-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {imagesToDisplay.map((item, index) => (
        <div class="card hover:shadow-strong group">
          <div class="relative overflow-hidden rounded-lg mb-4">
            <img 
              src={galleryItems.length > 0 && item.image ? getImageUrl(item.image, 'medium') : item.src}
              alt={galleryItems.length > 0 ? item.alt_text : item.alt}
              loading="lazy"
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <div class="space-y-2">
            <h3 class="font-heading font-semibold text-xl text-brand-navy">
              {item.title}
            </h3>
            <p class="text-secondary leading-relaxed text-sm">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA Section -->
    <div class="text-center mt-16">
      <h3 class="font-heading text-2xl lg:text-3xl font-bold text-brand-navy mb-4">
        Ready to Welcome a Champion?
      </h3>
      <p class="text-lg text-secondary mb-8 max-w-2xl mx-auto">
        Discover available puppies from our champion bloodlines or learn about our breeding program.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/puppies" 
          class="bg-brand-orange hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-medium transition-colors inline-flex items-center gap-2"
        >
          <Icon class="w-5 h-5" name="bx:bxs-heart" />
          View Available Puppies
        </a>
        <a 
          href="/contact" 
          class="bg-white border-2 border-brand-orange text-brand-orange hover:bg-brand-orange hover:text-white px-8 py-3 rounded-lg font-medium transition-colors inline-flex items-center gap-2"
        >
          <Icon class="w-5 h-5" name="bx:bxs-phone" />
          Contact Us
        </a>
      </div>
    </div>
  </div>
</section> 