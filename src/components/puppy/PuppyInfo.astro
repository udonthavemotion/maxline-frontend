---
import { Icon } from "astro-icon/components";
import { type Puppy } from "@/lib/strapi";

interface Props {
  puppy: Puppy;
}

const { puppy } = Astro.props;

// Function to render rich text blocks
function renderRichText(content: any) {
  if (typeof content === 'string') {
    return content;
  }
  
  if (Array.isArray(content)) {
    return content.map((block, index) => {
      if (block.type === 'paragraph') {
        return block.children.map((child, childIndex) => child.text).join('');
      }
      return '';
    }).join(' ');
  }
  
  return '';
}
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-heading font-bold text-brand-navy mb-4">
        About {puppy.name}
      </h2>
      <p class="text-lg text-secondary">
        Get to know this adorable English Bulldog puppy
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Basic Information -->
      <div class="space-y-6">
        <!-- Description -->
        {puppy.description && (
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
              <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-info-circle" />
              Description
            </h3>
            <div class="prose max-w-none text-gray-700">
              <p class="leading-relaxed">
                {renderRichText(puppy.description)}
              </p>
            </div>
          </div>
        )}
        
        <!-- Health Records -->
        {puppy.healthrecords && (
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
              <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-shield" />
              Health Records
            </h3>
            <div class="prose max-w-none text-gray-700">
              <p class="leading-relaxed">
                {renderRichText(puppy.healthrecords)}
              </p>
            </div>
          </div>
        )}
        
        <!-- Puppy Stats -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-bar-chart" />
            Puppy Details
          </h3>
          <div class="grid grid-cols-2 gap-4">
            {puppy.age && (
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-brand-navy">{puppy.age}</div>
                <div class="text-sm text-gray-600">Age</div>
              </div>
            )}
            
            {puppy.gender && (
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-brand-navy">{puppy.gender}</div>
                <div class="text-sm text-gray-600">Gender</div>
              </div>
            )}
          </div>
        </div>
      </div>
      
      <!-- Adoption Information -->
      <div class="space-y-6">
        <!-- Adoption Status -->
        <div class="bg-gradient-to-br from-brand-blue to-purple-600 text-white rounded-xl p-6 shadow-lg">
          <h3 class="text-2xl font-heading font-bold mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-orange" name="bx:bxs-heart" />
            Adoption Information
          </h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-neutral-200">Price:</span>
              <span class="text-xl font-bold text-brand-orange">${puppy.price.toLocaleString()}</span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-neutral-200">Status:</span>
              <span class={`font-medium capitalize px-3 py-1 rounded-full text-sm ${
                puppy.avaliable === 'Available' 
                  ? 'bg-green-500/20 text-green-200 border border-green-400' 
                  : puppy.avaliable === 'Reserved'
                  ? 'bg-yellow-500/20 text-yellow-200 border border-yellow-400'
                  : 'bg-red-500/20 text-red-200 border border-red-400'
              }`}>
                {puppy.avaliable}
              </span>
            </div>
            
            <div class="pt-3 border-t border-white/20">
              <p class="text-sm text-neutral-300">
                {puppy.avaliable === 'Available' 
                  ? 'This puppy is ready for adoption! Contact us to schedule a visit.'
                  : puppy.avaliable === 'Reserved'
                  ? 'This puppy is reserved but we have other puppies available.'
                  : 'This puppy has found a loving home!'
                }
              </p>
            </div>
          </div>
        </div>
        
        <!-- What's Included -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-gift" />
            What's Included
          </h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <Icon class="w-5 h-5 text-green-500" name="bx:bxs-check-circle" />
              <span class="text-gray-700">Health certificate</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon class="w-5 h-5 text-green-500" name="bx:bxs-check-circle" />
              <span class="text-gray-700">First vaccinations</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon class="w-5 h-5 text-green-500" name="bx:bxs-check-circle" />
              <span class="text-gray-700">Microchip identification</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon class="w-5 h-5 text-green-500" name="bx:bxs-check-circle" />
              <span class="text-gray-700">Puppy starter pack</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon class="w-5 h-5 text-green-500" name="bx:bxs-check-circle" />
              <span class="text-gray-700">Lifetime breeder support</span>
            </div>
          </div>
        </div>
        
        <!-- Placeholder for Future Content -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4 flex items-center gap-2">
            <Icon class="w-6 h-6 text-brand-blue" name="bx:bxs-star" />
            Temperament & Personality
          </h3>
          <p class="text-gray-600 italic">
            Detailed personality information will be available here once configured in the admin panel.
          </p>
        </div>
      </div>
    </div>
    
    <!-- Call to Action -->
    <div class="text-center mt-12">
      <div class="bg-secondary rounded-2xl p-8">
        <h3 class="text-2xl font-heading font-bold text-brand-navy mb-4">
          Ready to Adopt {puppy.name}?
        </h3>
        <p class="text-lg text-gray-600 mb-6">
          {puppy.avaliable === 'Available' 
            ? 'Contact us today to schedule a visit and meet your new best friend!'
            : 'This puppy may not be available, but we have other adorable puppies waiting for homes.'
          }
        </p>
        <a 
          href="#contact" 
          class="bg-brand-orange hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-medium transition-colors inline-flex items-center gap-2"
        >
          <Icon class="w-5 h-5" name="bx:bxs-heart" />
          Get in Touch
        </a>
      </div>
    </div>
  </div>
</section> 