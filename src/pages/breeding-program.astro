        loadingIndicator.style.pointerEvents = 'none';
      }
    }
    
    // Show quality indicator
    function showQualityIndicator() {
      if (qualityIndicator) {
        qualityIndicator.style.opacity = '1';
        qualityIndicator.style.transform = 'translateY(0)';
        
        // Auto-hide after 3 seconds
        setTimeout(() => {
          if (qualityIndicator) {
            qualityIndicator.style.opacity = '0';
            qualityIndicator.style.transform = 'translateY(-10px)';
          }
        }, 3000);
      }
    }
    
    // Ultra-smooth video transition
    function transitionToVideo() {
      if (videoReady && !posterHidden && heroVideo) {
        console.log('üé¨ Transitioning to ultra HD video...');
        
        // Smooth transition to video
        heroVideo.style.transition = 'opacity 1s cubic-bezier(0.4, 0, 0.2, 1)';
