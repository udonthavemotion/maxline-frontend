        const imageSrc = trigger.getAttribute('data-image-src') || (trigger.querySelector('img') as HTMLImageElement)?.src;
        const caption = trigger.getAttribute('data-image-alt') || (trigger.querySelector('img') as HTMLImageElement)?.alt || '';
        
